<section>


<header>
  <h2>Edit Event</h2>
</header>


<form action="/encounter/single/{{ _id }}/edit" method="POST">
  <h3>Host: {{singleEvent.host.name}}</h3>
  <div>
    <label for="eventName"> Event Name </label>
    <input type="text" name='eventName' id='eventName' value="{{singleEvent.eventName}}" required >
  </div>

  <div>
    {{>map}}
  </div>
  
  <div>
    <label for="date"> Event Date </label>
    <input type="datetime-local" name='date' id='date' required value="date">
  </div>

  <div>
    <label for="numberOfPlayer"> Number of Players </label>
    <input type="number" name='numberOfPlayer' id='numberOfPlayer' min="2" required value="{{singleEvent.numberOfPlayer}}">
  </div>

  <div>
    <label for="gameList"> Select your Game </label>
    <select type="text" name='gameList' id='gameList' required>
      {{#each singleEvent.total as |item|}}
      <option value="{{item}}">{{item}}</option>
      {{/each}}
      </select>
  </div>
  <div>
    <button type="submit"> Submit </button>
  </div>
</form>

<aside class="asideBar">
  {{>sidebar}}
</aside>
</section>